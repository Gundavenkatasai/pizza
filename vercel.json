{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "project/dist",
  "installCommand": "npm install && cd project/server && npm install",
  "functions": {
    "project/server/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/project/server/index.js"
    },
    {
      "source": "/admin/:path*",
      "destination": "/project/server/index.js"
    },
    {
      "source": "/:path*",
      "destination": "/project/server/index.js"
    }
  ]
}
