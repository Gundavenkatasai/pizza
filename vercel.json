{
  "buildCommand": "npm run build",
  "outputDirectory": "project/dist",
  "installCommand": "npm install && cd project/server && npm install",
  "functions": {
    "project/server/*.js": {
      "includeFiles": "{project/dist/**,admin-dashboard/dist/**}"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/project/server/index.js" },
    { "source": "/admin/:path*", "destination": "/project/server/index.js" },
    { "source": "/:path*", "destination": "/project/server/index.js" }
  ]
}
